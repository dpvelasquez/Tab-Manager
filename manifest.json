{
    "manifest_version": 2,
    "name": "Tab Crunch",
    "version": "1.0",

    "description": "Automatically closes unused tabs",

    "background": {
        "scripts": ["background.js"]
    },

    "options_page": "options.html",

    "browser_action": {
        "default_icon": "tab.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab",
        "<all_urls>",
        "storage",
        "tabs"
    ]
}